/* pages/Card/Card.wxss */
.memberPage {
    margin: 40rpx 0rpx 40rpx 0rpx;
}

/* 图片卡片轮播效果 */
.memberSwiper {
    height: 388rpx;
}

.offerCardImageBox {
    box-sizing: border-box;
    margin: 30rpx 10rpx;
    box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.3);
    width: 654rpx;
    height: 328rpx;
    /* background: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.8)); */
    border-radius: 16rpx;
}

.active {
    transition-duration: 0.5s;
    margin: 10rpx 10rpx;
    height: 368rpx;
}

.offerCardImage {
    display: block;
    position: relative;
    width: 100%;
    height: 100%;
    background: var(--color-bg-F);
    z-index: -1;
}