/* components/orderStatus/orderStatus.wxss */
@import '/iconfont.wxss';

.comm_orderStatusBox {
    margin: 10rpx 40rpx;
    padding: 40rpx 0rpx;
    background: #ffffff;
    box-shadow: 0rpx 0rpx 20rpx 0rpx #EFEFEF;
}

.cancelBox {
    padding: 0rpx 40rpx 0rpx 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.line {
    background-color: #f8f8f8;
    width: 100%;
    height: 40rpx;
}

.lineImage {
    width: 100%;
    height: 40rpx;
}

.cancel {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    height: 50rpx;
    border-radius: 4rpx;
    font-size: 24rpx;
    border: 2rpx solid #fe514b;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
    color: #FE514B;
    line-height: 26rpx;
}

.paymentType {
    padding-left: 20rpx;
    height: 50rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    line-height: 50rpx;
}

.paymentPrompt {
    padding: 20rpx 40rpx 0rpx 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #999999;
    line-height: 44rpx;
}

.paymentTime {
    font-family: PingFangSC-Medium;
    color: #111111;
    font-size: 28rpx;
}

.QRimage {
    width: 356rpx;
    height: 356rpx;
}

/* 颜色 */
.paymentIconYellow {
    font-size: 36rpx;
    color: #FFCC00;
}

.paymentIconGray {
    font-size: 36rpx;
    color: #cccccc;
}

.paymentIconRed {
    font-size: 36rpx;
    color: #FE514B;
}

.paymentIconBlue {
    font-size: 36rpx;
    color: #007AFF;
}

.paymentIconGreen {
    font-size: 36rpx;
    color: #4CD964;
}